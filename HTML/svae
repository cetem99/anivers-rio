    <script>
        const saveButton = document.querySelector('.save');
        const cancelButton = document.querySelector('.cancel');
        const deleteButton = document.querySelector('.delete');
        const editButton = document.querySelector('.edit');
        const viewButton = document.querySelector('.view');
        const nameInput = document.getElementById('name');
        const dateInput = document.getElementById('date');
        const notificationInput = document.getElementById('notification');

        saveButton.addEventListener('click', () => {
            // Implementar l√≥gica para salvar os dados
            alert('Dados salvos!');
        });

        cancelButton.addEventListener('click', () => {
            // Implementar l√≥gica para cancelar a edi√ß√£o
            alert('Edi√ß√£o cancelada!');
        });

        deleteButton.addEventListener('click', () => {
            // Implementar l√≥gica para excluir os dados
            if (confirm('Tem certeza que deseja excluir?')) {
                alert('Dados exclu√≠dos!');
            }
        });

        editButton.addEventListener('click', () => {
            // Habilitar os campos para edi√ß√£o
            nameInput.readOnly = false;
            dateInput.readOnly = false;
            notificationInput.readOnly = false;
            // Alterar o texto dos bot√µes
            saveButton.textContent = 'Atualizar';
            cancelButton.textContent = 'Cancelar';
        });

        viewButton.addEventListener('click', () => {
            // Implementar l√≥gica para visualizar os dados
            alert('Visualizando dados!');
        });
    </script>
